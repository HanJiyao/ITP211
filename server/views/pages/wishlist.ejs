<!DOCTYPE html>
<html>
<head>
  <title>
    <%= title %>
  </title>
</head>
<body>
  <% include ../partials/header %>
  <div class="container">
    <div class="col-lg-12">
      <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#createStudent">
        New Wishlist
      </button>
    </div>
    <div class="modal fade" id="createStudent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <form action="/wishlist/new" method="post">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <h4 class="modal-title" id="myModalLabel">Create New Wishlist</h4>
            </div>
            <div class="modal-body">
              <fieldset class="form-group">
                <label for="orderID">Order ID</label>
                <input type="text" id="orderID" name="orderID" class="form-control" placeholder="Order Id" required="true">
              </fieldset>
              <fieldset class="form-group">
                <label for="seller_name">Seller Name</label>
                <input type="text" id="seller_name" name="seller_name" class="form-control" placeholder="Seller Name" required="true">
              </fieldset>
              <fieldset class = "form-group">
                <label for ="productName">Product Name</label>
                <input type = "file" id ="productName" name = "productName" class ="form-control" placeholder="Product Name" required ="true">
              </fieldset>
              <fieldset class="form-group">
                <label for="productQuantity">Product Quantity</label>
                <input type="text" id="productQuantity" name="productQuantity" class="form-control" placeholder="Product Quantity" required="true">
              </fieldset>
              <fieldset class="form-group">
                <label for="productPrice">Product Price</label>
                <input type="text" id="productPrice" name="productPrice" class="form-control" placeholder="Product Price" required="true">
              </fieldset>
              <fieldset class="form-group">
                <label for="productTotalprice">Total Price</label>
                <input type="text" id="productTotalprice" name="productTotalprice" class="form-control" placeholder="Total Price" required="true">
              </fieldset>
              
            
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Add Wishlist</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <table class="table">
      <thread>
        <tr>
          <th>S/N</th>
          <th>Order ID</th>
          <th>Seller Name</th>
          <th>Product Name</th>
          <th>Product Quantity</th>
          <th>Product Price</th>
          <th>Total Price</th>
          
        </tr>
        <!-- order_id:req.body.order_id,
                seller_name:req.body.seller_name,
                product_name:req.body.product_name,
                product_quantity:req.body.product_quantity,
                product_price:req.body.product_price,
                total_price:req.body.total_price,
                seller_name:req.body.seller_name,
                created:req.body.created,
            } -->
        <% for(var i=0; i < itemList.length; i++){ %>
          <tr class="rowRecord" data-id="<%= itemList[i].id %>">
            <td>
              <%=i+1%>
            </td>
            <td>
              <%= itemList[i].order_id %>
            </td>
            <td>
              <%=itemList[i].seller_name%>
            </td>
            <td>
              <%= itemList[i].product_quantity %>
            </td>
            <td>
              <%= itemList[i].product_price %>
            </td>
            <td>
              <%=itemList[i].total_price %>
            </td>
            <td>
              <input type="button" class="editBtn" value="Edit">
              <input type="button" class="deleteBtn"  value="Delete">
            </td>
          </tr>
        <% } %>
      </thread>
    </table>
    <script>
      $(".editBtn").click(function () {
        var record_num = $(this).closest("tr").data('id');
        location.href = "<%=urlPath %>edit/"+record_num;
      });
      $(".deleteBtn").click(function () {
        var record_num = $(this).closest("tr").data('id');
        $.ajax({
          url: '<%=urlPath%>' + record_num,
          type: 'DELETE',
          success: function (result) {
            console.log(result.message);
            var itemToRemove = '.rowRecord[data-id=' + record_num + ']';
            $(itemToRemove).remove();
            window.location.href="/wishlist"
          },
          error: function (result) {
            alert("Unable to delete wishlist record.");
            console.log(result.message);
          }
        });
      });
    </script>
  </div>
  <% include ../partials/footer %>
</body>
</html>
