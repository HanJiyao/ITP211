<!DOCTYPE html>
<html>
<head>
    <title>
        <%= title %>
    </title>
    <style>
    #editProduct {
        background-color: #FFD700;
        color: #0028FF;
    }
    #content, #inputproductImage{
        margin-left: 10px;
    }

    </style>
</head>
<body>
    <% include ../partials/header %>
    <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Edit Product Record</h4>
    </div>
    <form id = "editProduct"action="/productsmanager/edit/<%=item.id%>" method="post" enctype="multipart/form-data">
        <fieldset class = "form-group">
            <label for ="inputproductImage" id = "content">Product Image:</label>
            <input type ="file" id = "inputproductImage" name ="productImage" class = "form-control" placeholder="Product Image" required = "true" value=" <%=item.productImage%>"
        </fieldset>    
        <fieldset class="form-group" id ="content">
            <label for="inputproductName">Product Name: </label>
            <input type="text" id="inputproductName" name="productName" class="form-control" placeholder="Product Name" required="true" value="<%=item.productName%>">
        </fieldset>
        <fieldset class="form-group" id ="content">
            <label for="inputType"> Product Type: </label>
            <select name = "productType" id="productType" required ="true">
                <option value = ""></option>
                <option value = "Storage" >Storage</option>
                <option value = "Optical Drive">Optical Drive</option>
                <option value = "MotherBoard">MotherBoard</option>
                <option value="Memory">Memory</option>
                <option value="Graphic Card">Graphic Card</option>
                <option value = "Processor">Processor</option>
                <option value = "Mouse">Mouse</option>
                <option value="Keyboard">Keyboard</option>
                <option value = "Monitor">Monitor</option>
                <option value = "Computer Case">Computer Case</option>
                <option value = "Power Supplies">Power Supplies</option>
              </select>
        </fieldset>
        <fieldset class="form-group" id ="content">
            <label for="productDesc">Product Description: </label>
            <input type="text" id="inputDesc" name="productDesc" class="form-control" placeholder="Product Description" required="true" value = "<%=item.productDesc%>">
          </fieldset>
        <fieldset class="form-group" id ="content">
            <label for="inputquantity">Quantity: </label>
            <input type="number"  min="0" id="inputquantity" name="quantity" class="form-control" placeholder="quantity" required="true" value="<%=item.quantity%>">
        </fieldset>
        <fieldset class="form-group" id ="content">
            <label for="inputPrice">Price: </label>
            <input type="number"  min="0" id="inputPrice" name="price" class="form-control" placeholder="price" required="true" value="<%=item.price/(1-item.discount_percentage)%>">
        </fieldset>
        <fieldset class="form-group pt-3" id ="content"> 
            <div class="row">
              <div class="col-3">
                <label for="discount_percentage"> Discount: </label>
              </div>
              <input class="col-2 form-control" type="number" max="99" min="0" id="inputdiscount_percentage" name="discount_percentage" class="form-control" required="true" style="position: relative;top:-8px">
              <div class="col-1">
                <div >%</div>
              </div>
            </div>
        </fieldset>
    </form>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <button type="button" class="btn btn-secondary" onclick=discardChanges()>Cancel</button>
    </div>
    <script>
        function saveChanges() {
            var url = "<%=hostPath%>/productsmanager/edit/<%=item.id%>";
            var newValues = {
                productImage:$("#inputproductImage").val(),
                productName: $("#inputproductName").val(),
                productType: $("#inputType").val(),
                quantity: $("#inputquantity").val(),
                price: $("#inputPrice").val(),
                discount_percentage: $("#discount_percentage").val()
                }
            $.ajax({
                url: url,
                type: "POST",
                data: JSON.stringify(newValues),
                dataType: "json",
                contentType: "application/json",
                success: function(result){
                    alert(" Product updated successfully");
                    location.href = "<%=hostPath%>/productsmanager"
                },
                error: function(result){
                    alert("Error updating product");
                    discardChanges();
                }
            })
        }
        function discardChanges() {
            location.href = "<%=hostPath%>/productsmanager"
        }
    </script>
    <% include ../partials/footer %>
</body>
</html>
