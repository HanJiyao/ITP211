<!DOCTYPE html>
<html>
<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css'>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src='/javascripts/jquery.min.js'></script>
    <script src='/javascripts/bootstrap.min.js'></script>
</head>

<body>
    <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Edit Student Record</h4>
    </div>
    <div class="modal-body">
        <fieldset class="form-group">
            <label for="inputproductID">Product ID</label>
            <input type="text" id="inputproductID" name="productId" class="form-control" placeholder="Student Id" required="true" value="<%=item.productId%>">
        </fieldset>
        <fieldset class="form-group">
            <label for="inputproductName">Product Name</label>
            <input type="text" id="inputproductName" name="productName" class="form-control" placeholder="Student Name" required="true" value="<%=item.productName%>">
        </fieldset>
        <fieldset class="form-group">
            <label for="inputType">Type</label>
            <input type="text" id="inputType" name="type" class="form-control" placeholder="Type" required="true" value="<%=item.type%>">
        </fieldset>
        <fieldset class="form-group">
            <label for="inputQty">Quantity</label>
            <input type="text" id="inputQty" name="qty" class="form-control" placeholder="qty" required="true" value="<%=item.qty%>">
        </fieldset>
        <fieldset class="form-group">
            <label for="inputPrice">Quantity</label>
            <input type="text" id="inputPrice" name="price" class="form-control" placeholder="price" required="true" value="<%=item.price%>">
        </fieldset>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" onclick=saveChanges()>Save Changes</button>
        <button type="button" class="btn btn-secondary" onclick=discardChanges()>Cancel</button>
    </div>
    <script>
        function saveChanges() {
            var url = "<%=hostPath%>/edit/<%=item.id%>";
            var newValues = {
                productId: $("#inputproductID").val(),
                productName: $("#inputproductName").val(),
                type: $("#inputType").val(),
                qty: $("#inputQty").val(),
                price: $("inputPrice").val()
            }
            $.ajax({
                url: url,
                type: "POST",
                data: JSON.stringify(newValues),
                dataType: "json",
                contentType: "application/json",
                success: function(result){
                    alert(" Product updated successfully");
                    location.href = "<%=hostPath%>"
                },
                error: function(result){
                    alert("Error updating product");
                    discardChanges();
                }
            })
        }

        function discardChanges() {
            location.href = "<%=hostPath%>"
        }
    </script>
</body>

</html>