<div class="master-wrapper" style="background: #e0e0e0; min-height: 100vh;position: relative;height:100%;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-center pb-0 pt-0">
        <div class="container justify-content-between" >
            <a class="navbar-brand pr-5" href="/" style="font-size:36px;font-weight: 900">Silicon Zone</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <div class="container">
                    <div class="row justify-content-between">
                        <div class="col">
                            <form class="row mt-3">
                                <input class="col col-7 col-lg-9 border border-dark border-right-0 rounded-left " type="search" placeholder="Search" aria-label="Search" />
                                <button class="col pr-1 pl-0 border border-dark border-left-0 rounded-right bg-white text-right" type="submit">
                                    <i class="material-icons" style="font-size: 42px;vertical-align:-12px;">search</i>
                                </button>
                                <a href="/cart">
                                    <div class="col text-white text-center">
                                        <i class="material-icons" style="font-size:30px;padding-top:8px;">
                                            shopping_cart
                                        </i>
                                    </div>
                                </a>
                            </form>
                            <div class="row text-lg-cente">
                                <ul class="navbar-nav w-100" style="font-size:15px;">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="false">
                                            Category
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                            <a class="dropdown-item" href="#">Action</a>
                                            <a class="dropdown-item" href="#">Another action</a>
                                            <a class="dropdown-item" href="#">Something else here</a>
                                        </div>
                                    </li>
                                    <li class="nav-item active">
                                        <a class="nav-link" href="#">Features</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Popular</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Taobao Collection</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <% if (user) { %>
                        <style>
                            .dropdown-item i{
                                vertical-align: -7px;
                                padding-right: 25px;
                            }
                            #dropdownProfile:hover, #dropdownWishlist:hover, #dropdownReview:hover,#dropdownProduct:hover {
                                color:#f80!important;
                                background: #EEEEEE;
                            }
                            #dropdownLogout{
                                color:#9e9e9e!important;
                                background: #e0e0e0;
                                text-align: center;
                                font-size: 0.8rem;
                            }
                            #dropdownLogout:hover{
                                color:red!important;
                            }
                        </style>
                        <div class="col-lg-2 mt-4 text-center">
                            <a href="#" id="gravatarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img class="rounded-circle p-0 mb-4" src="<%= avatar %>" alt="avatar" style="border:2px solid grey;height:60px;">
                            </a>
                            <div id="dropdownMenu" class="dropdown-menu pt-4 pb-0" aria-labelledby="navbarDropdownMenuLink" style="font-size: 1rem!important;left: -25px;box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12); border: 0;">
                                <a id="dropdownProfile" class="dropdown-item pl-4 pr-5" href="/profile"><i class="material-icons">account_circle</i> My Profile</a>
                                <a id="dropdownWishlist" class="dropdown-item pl-4 pr-5" href="#"><i class="material-icons">favorite</i> My Wishlist</a>
                                <a id="dropdownReview" class="dropdown-item pl-4 pr-5" href="#"><i class="material-icons">mode_comment</i> My Review</a>
                                <a id="dropdownProduct" class="dropdown-item pl-4 pr-5" href="/products"><i class="material-icons">view_list</i> My Product</a>
                                <a id="dropdownLogout" class="dropdown-item pl-4 pr-5 bg-light-grey" href="/logout"><i class="material-icons">power_settings_new</i> Logout</a>
                            </div>
                            <script>
                                // $('#gravatarDropdownMenuLink').mouseover(()=>{
                                //     $('#dropdownMenu').addClass("show")
                                // })
                                // $('#gravatarDropdownMenuLink').mouseleave(() => {
                                //     $('#dropdownMenu').removeClass("show")
                                // })
                            </script>
                        </div>
                        <% } else {  %>
                        <div class="col-lg-4 mt-lg-4 mb-3 pr-0 pl-lg-4">
                            <div class="row justify-content-end">
                                <div class="col-3 pt-3 pl-1 font-weight-bold"><a class="text-white" href="/login">LOGIN</a></div>
                                <a class="col" href="/signup"><button type="button" class="btn btn-warning btn-block rounded font-weight-bold waves-effect waves-light" style="font-size:1rem;-webkit-border-radius:10em!important;border-radius:10em!important;" href="/signup">SIGN UP</button></a>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
